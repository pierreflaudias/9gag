{% extends 'base.html.twig' %}

{% block body %}
    <h2>Register on the site</h2>
    <form class="form-horizontal">
        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.email) }}
            <div class="col-sm-10">
                {{ form_errors(form.email, { 'attr': {'class': 'help-block'} }) }}
                {{ form_widget(form.email) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.username) }}
            <div class="col-sm-10">
                {{ form_errors(form.username, { 'attr': {'class': 'help-block'} }) }}
                {{ form_widget(form.username) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.password.first) }}
            <div class="col-sm-10">
                {{ form_errors(form.password.first, { 'attr': {'class': 'help-block'} }) }}
                {{ form_widget(form.password.first) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.password.second) }}
            <div class="col-sm-10">
                {{ form_errors(form.password.second, { 'attr': {'class': 'help-block'} }) }}
                {{ form_widget(form.password.second) }}
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                {{ form_widget(form.save) }}
            </div>
        </div>
        {{ form_end(form) }}
    </form>
{% endblock %}